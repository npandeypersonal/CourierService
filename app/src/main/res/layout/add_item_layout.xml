<!-- activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/basePriceTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/base_price"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/pkgIdTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/package_id"/>
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pkgWeightTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/package_weight"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/distanceTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/distance"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <!-- Fifth EditText -->
    <EditText
        android:id="@+id/offerCodeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/offer_code"/>
</LinearLayout>